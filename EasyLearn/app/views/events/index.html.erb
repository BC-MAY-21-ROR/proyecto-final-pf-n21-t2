<%= render "layouts/menu"%>

<div class="container mt-3 col-8">
<div class="d-flex justify-content-end m-3">
  <button type="button" class="btn btn-success ml-3" data-toggle="modal" data-target="#addEvent">
    Add
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square-fill" viewBox="0 0 16 16">
      <path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm6.5 4.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3a.5.5 0 0 1 1 0z"></path>
    </svg>
  </button>
</div>

<table class="table table-dark table-hover">
      <thead>
    <tr>
      <th scope="col" class="text-center">Titulo</th>
      <th scope="col" class="text-center">Descripcion</th>
      <th scope="col" class="text-center">Feha</th>
      <th scope="col" class="text-center">Hora</th>
      <th scope="col" class="text-center">link</th>
      <th scope="col" class="text-center"></th>

    </tr>
  </thead>
  <tbody>
    <%
=begin%>
 <tr>
      <% @events.each do |event|%>
      <th scope="row" class="text-center">
      <%= event.title%>
      </th>
      <td class="text-center" ><%= event.description%></td>
      <td class="text-center"><%= event.day%></td>
      <td class="text-center"><%= event.hour%></td>
      <td class="text-center"><%= event.link%></td>
      <td class="text-center">
        <button type="button" id="" data-toggle="modal" data-target="" class="btn btn-success">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
            <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"></path>
          </svg>
        </button>
        <button type="submit" class="btn btn-danger">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle-fill" viewBox="0 0 16 16">
            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z"></path>
          </svg>  
        </button>
      </td>
    </tr>
    <% end %> 
<%
=end%>

    <div class="modal" id="addEvent" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title text-dark">Add event</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
          <%= form_for Event.new do |f| %>
            <div class="input-group form-group mb-3">
              <%= f.text_field :title, placeholder: "title", class: "form-control"%>
            </div>
            <div class="input-group form-group mb-3">
              <%= f.text_field :description, placeholder: "description", class: "form-control"%>
            </div>
            <div class="input-group form-group mb-3">
              <%= f.text_field :day, placeholder: "day", class: "form-control"%>
            </div>
            <div class="input-group form-group mb-3">
              <%= f.text_field :hour, placeholder: "hour", class: "form-control"%>
            </div>
            <div class="input-group form-group mb-3">
              <%= f.text_field :link, placeholder: "link", class: "form-control"%>
            </div>
            <div class="form-group">
              <%= f.submit class:"btn btn-success float-right" %>
						</div>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  </tbody>
</table>
